def onColChange(dat, cols):
	#print(type(dat))
	if 0 in cols:
		r = str(dat[0,1]).strip()
		newlist = r.split(' ')
		int(newlist[1])
		print(r)
		if newlist[0] == '!rotate' and newlist[1] >= 720;
			print(dat[0,0]+"rotating")
			op('noob').par.text = dat[0,0] + " rotated " + newlist[1]
			op('trigger1').par.triggerpulse.pulse()
			op('math2').par.torange2 = newlist[1]

